<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="64dip"
    android:weightSum="1"
    android:longClickable="true">

    <ImageButton
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:id="@+id/editBTN"
        android:scaleType="centerCrop"
        android:layout_gravity="right"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/edit_white"
        android:onClick="editTask" />

    <TextView
        android:id="@+id/task_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="My Name"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/doneBtn"
        android:layout_toRightOf="@+id/doneBtn"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:textColor="#ffffff" />

    <ImageButton
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:id="@+id/doneBtn"
        android:scaleType="centerCrop"
        android:layout_gravity="right"
        android:background="@drawable/add_white"
        android:layout_alignTop="@+id/editBTN"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:longClickable="false"
        android:onClick="changeStatus"/>
</RelativeLayout>